<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
	<title>Fave</title>
	<style>
		body, ul, p {
			margin: 0;
		}
		body {
			background-color: #d2d2d2;
		}
		ul {
			list-style: none;
			padding: 0;
		}
		.section {
			text-align: center;
			font-size: .5rem;
		}
		.content {
			padding: .1rem;
			text-indent: 1rem;
			text-align: left;
			font-size: .4rem;
		}
		.seperator {
			margin: .4rem 0 .2rem 0;
			border-bottom: 1px dashed #8e5757;
		}


		.fp-one {
			display: flex;
			flex-direction: column;
		}
		.fp-one-image-wrapper {
			height: 5.5rem;
		}
		.common-image {
			height: 100%;
			width: 100%;
			object-fit: contain;
		}
		
			
		.pedia-title {
			padding-top: .1rem;
		}

		.event-image-wrapper {
			height: 4rem;
		}
		.today-on-history ul {
			font-size: .4rem;
			padding:0 .1rem;
		}
		.history-illustration {
			margin-top: .15rem;
		}
		ul li {
			margin-bottom: .2rem;
			background-color: rgba(255,255,255, .7);
			border-radius: 5px;
			padding: .2rem 0;
		}
		.history-illustration p {
			margin-top: .2rem;
		}
		


		@media screen and (max-width: 320px) {
		    html {
		        font-size:42.667px;
		        font-size: 13.33333vw
		    }
		}

		@media screen and (min-width: 321px) and (max-width:360px) {
		    html {
		        font-size:48px;
		        font-size: 13.33333vw
		    }
		}

		@media screen and (min-width: 361px) and (max-width:375px) {
		    html {
		        font-size:50px;
		        font-size: 13.33333vw
		    }
		}

		@media screen and (min-width: 376px) and (max-width:393px) {
		    html {
		        font-size:52.4px;
		        font-size: 13.33333vw
		    }
		}

		@media screen and (min-width: 394px) and (max-width:412px) {
		    html {
		        font-size:54.93px;
		        font-size: 13.33333vw
		    }
		}

		@media screen and (min-width: 413px) and (max-width:414px) {
		    html {
		        font-size:55.2px;
		        font-size: 13.33333vw
		    }
		}

		@media screen and (min-width: 415px) and (max-width:480px) {
		    html {
		        font-size:64px;
		        font-size: 13.33333vw
		    }
		}

		@media screen and (min-width: 481px) and (max-width:540px) {
		    html {
		        font-size:72px;
		        font-size: 13.33333vw
		    }
		}

		@media screen and (min-width: 541px) and (max-width:640px) {
		    html {
		        font-size:85.33px;
		        font-size: 13.33333vw
		    }
		}

		@media screen and (min-width: 641px) and (max-width:720px) {
		    html {
		        font-size:96px;
		        font-size: 13.33333vw
		    }
		}

		@media screen and (min-width: 721px) and (max-width:768px) {
		    html {
		        font-size:102.4px;
		        font-size: 13.33333vw
		    }
		}

		@media screen and (min-width: 769px) {
		    html {
		        font-size:102.4px;
		        font-size: 13.33333vw
		    }
		}
	</style>
</head>
<body>
	<div class="section fp-one">
		<p class="section-title">The one · 一个</p>
		<div class="fp-one-image-wrapper">
			<img class="fp-one-image common-image" src="<%= theOne.img%>">
		</div>
		<span class="fp-one-type"><%= theOne.type%></span>
		<p class="content fp-one-content"><%= theOne.text%></p>
	</div>
	<div class="seperator"></div>
	<div class="section hotword-pedia">
		<p class="section-title">Jikipedia · 每日一词</p>
		<p class="pedia-title"><%= jikipedia.title%></p>
		<p class="content pedia-content"><%= jikipedia.content%></p>
	</div>
	<div class="seperator"></div>
	<div class="section today-on-history">
		<p class="section-title">Today on History</p>
		<p><%= history.date%></p>
		<ul class="history-illustration">
			<% for(let i = 0; i < history.illus.length; i++){ %>
				<% let curr = history.illus[i] %>
				<li class="illustration-item">
					<div class="event-image-wrapper">
						<img src="<%= curr.img%>" class="event-illus-image common-image">
					</div>
					<p class="event-desc-text"><%= curr.text%></p>
				</li>
			<% } %>
		</ul>
		<ul class="history-plain-text">
			<% for(let i = 0; i < history.desc.length; i++){ %>
				<% let curr = history.desc[i] %>
				<li class="plain-item"><%= curr %></li>
			<% } %>
		</ul>
	</div>
</body>
</html>